# OpenRouter API Key for accessing LLMs
# Get your key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cerebras API Key for direct access (fallback)
# Get your key from: https://inference.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Optional: Adjust pipeline settings
BATCH_SIZE=75
SIMILARITY_THRESHOLD=0.=50
MAX_RETRIES=3
GENERATION_TEMPERATURE=0.8
VALIDATION_TEMPERATURE=0.3
GENERATION_MAX_TOKENS=8000
VALIDATION_MAX_TOKENS=2000

# Automated mode: Set TARGET_ROWS to run automatically until N rows added
# Leave commented out for manual mode
# TARGET_ROWS=1000

# Validation sampling settings (for faster validation)
VALIDATION_SAMPLE_PERCENTAGE=10  # Percentage of scenarios to validate (default 20%)
VALIDATION_FAILURE_THRESHOLD=50  # Percentage of failures to reject entire batch (default 50%)
VALIDATION_ESCALATION_THRESHOLD=1  # Percentage of failures to increase sample size (default 30%)